<%- include ('./partials/header.ejs') %>
<body>
    <%- include ('./partials/navbar.ejs') %>
 
    <div class="container">
        <hr>
        <h1>Perguntas</h1>
        <hr>
        <a href="/pergunta" class="btn btn-estilizado">Perguntar</a>
        <hr>
        <% perguntas.forEach(pergunta => { %>
            <div class="card">
                <div class="card-body">
                    <h3><%= pergunta.titulo %></h3>
                </div>
                <div class="card-footer">
                    <a href="/pergunta/<%= pergunta.id %>"><button class="btn btn-warning">Responder</button></a>
                </div>
            </div>
            <br>
        <% }) %>
 
    </div>
 
    <%- include ('./partials/footer.ejs') %>
    
</body>
</html>