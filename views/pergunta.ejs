<%- include ('./partials/header.ejs') %>
<body>
    <%- include ('./partials/navbar.ejs') %>
    
    <div class="container">
        <hr>
        <h2><%= pergunta.titulo %></h2>
        <p><%= pergunta.descricao %></p>

        <form method="POST" action="/responder" >
            <h3>Responda</h3>
            <textarea placeholder="Digite sua resposta" class="form-control" name="corpo" required></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="mt-3 btn btn-warning">Responder</button>
        </form>
    </div>
    
    <%- include ('./partials/footer.ejs') %>        
</body>
</html>